{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet">
{% endblock %}
{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item " aria-current="page"><a href="index.php">Accueil</a></li>
        <li class="breadcrumb-item " aria-current="page">Statistiques</li>
        <li class="breadcrumb-item active" aria-current="page">Senior A</li>
    </ol>
</nav>


<div class="container-fluid">
    <h1 class="sous-titre">Statistiques {{ division }}<small> Groupe {{ groupe }}</small></h1>
    <div class="row">
        <div class="col-lg-5 offset-lg-1">
            <h2>Classement</h2>
            <div class="table-responsive classement">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Equipe</th>
                            <th scope="col">Pts</th>
                            <th scope="col">Jo</th>
                            <th scope="col">G</th>
                            <th scope="col">N</th>
                            <th scope="col">D</th>
                            <th scope="col">F</th>
                            <th scope="col">BP</th>
                            <th scope="col">BC</th>
                            <th scope="col">P</th>
                            <th scope="col">Diff</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for equipe in equipes %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            {% if equipe.club %}
                                <td><img class="img-carriere mr-4" src="{{ asset('pictures/Logos/' ~ equipe.club.logo) }}"><span class="d-none d-sm-inline-block">{{ equipe.club.nom }}</span></td>
                            {% else %}
                                <td>{{ equipe.nomParse }}</td>
                            {% endif %}
                            <td class="font-weight-bold">{{ equipe.stats.points }}</td>
                            <td>{{ equipe.stats.journees }}</td>
                            <td>{{ equipe.stats.victoires }}</td>
                            <td>{{ equipe.stats.nuls }}</td>
                            <td>{{ equipe.stats.defaites }}</td>
                            <td>{{ equipe.stats.forfaits }}</td>
                            <td>{{ equipe.stats.butsPour }}</td>
                            <td>{{ equipe.stats.butsContre }}</td>
                            <td>{{ equipe.stats.penalites }}</td>
                            <td>{{ equipe.stats.difference }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-5">
            <h2>Résultats</h2>
            <div class="table-responsive resultats">
                <table class="table table-sm">
                    {% for rencontre in rencontres %}
                        <tr>
                            <td>{{ rencontre.date|date("d/m/Y") }}</td>
                            {% if rencontre.equipeDomicile.club %}
                                <td ><img class="img-carriere mr-4" src="{{ asset('pictures/Logos/' ~ rencontre.equipeDomicile.club.logo) }}"><span class="d-none d-sm-inline-block">{{ rencontre.equipeDomicile.club.nom }}</span></td>
                            {% else %}
                                <td>{{ rencontre.equipeDomicile.nomParse }}</td>
                            {% endif %}
                            <td><span class="text-nowrap">{{ rencontre.score }}</span></td>
                            {% if rencontre.equipeExterieure.club %}
                                <td class="text-right"><span class="d-none d-sm-inline-block">{{ rencontre.equipeExterieure.club.nom }}</span><img class="img-carriere ml-4" src="{{ asset('pictures/Logos/' ~ rencontre.equipeExterieure.club.logo) }}">
                                </td>
                            {% else %}
                                <td>{{ rencontre.equipeExterieure.nomParse }}</td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-5 offset-lg-1">
            <h2>Rencontres de la semaine</h2>
            <div class="table-responsive resultats">
                <table class="table table-sm">
                    {% for rencontre in agendas %}
                        <tr>
                            <td>{{ rencontre.date|date("d/m/Y") }}</td>
                            {% if rencontre.equipeDomicile.club %}
                                <td ><img class="img-carriere mr-4" src="{{ asset('pictures/Logos/' ~ rencontre.equipeDomicile.club.logo) }}"><span class="d-none d-sm-inline-block">{{ rencontre.equipeDomicile.club.nom }}</span></td>
                            {% else %}
                                <td>{{ rencontre.equipeDomicile.nomParse }}</td>
                            {% endif %}
                            <td><span class="text-nowrap">{{ rencontre.score }}</span></td>
                            {% if rencontre.equipeExterieure.club %}
                                <td class="text-right"><span class="d-none d-sm-inline-block">{{ rencontre.equipeExterieure.club.nom }}</span><img class="img-carriere ml-4" src="{{ asset('pictures/Logos/' ~ rencontre.equipeExterieure.club.logo) }}">
                                </td>
                            {% else %}
                                <td>{{ rencontre.equipeExterieure.nomParse }}</td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
        <div class="col-lg-5">
            <h2 class="page-header">Calendrier</h2>
            <select class="form-control"  id="selectEquipe">
                {% for equipe in equipeListe %}
                    <option value={{ equipe.id }} data-href="{{ path('calendrier-par-equipe', {'equipe': equipe.id}) }}">{{ equipe.nomParse }}</option>
                {% endfor %}
            </select>
            <div class="table-responsive resultats">
                <table id="calendrier" class="table table-sm">
                    <tbody id="resultAjaxCalendrier">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script >
        $(document).ready( function () {
            var cormeillesRoute = "{{ path('calendrier-par-equipe', {'equipe': cormeilles.id}) }}";
            var nomParse = '{{ cormeilles.nomParse|raw }}';
            $("#selectEquipe option").each(function(){
                if ($(this).text() == nomParse)
                    $(this).attr("selected","selected");
            });
            refreshClassement(cormeillesRoute, nomParse);


            $('#selectEquipe').change(function () {
                var route = $('#selectEquipe').find(":selected").attr('data-href');
                var equipeCourante = ($('#selectEquipe').find(":selected").html());
                refreshClassement(route, equipeCourante);
            })
        } );



        function refreshClassement(route, equipeCourante){
            $.ajax({
                url: route,
                type: "GET",
                success: function(data){
                    $("#resultAjaxCalendrier").html(data);
                    addColor(equipeCourante);
                }
            });
        }

        function addColor(equipeCourante){
            $("#calendrier > tbody > tr").each(function(){
                var score = $('.score', this).html();
                var res = score.split("-");
                if(res[0]){
                    if (parseInt(res[0]) == parseInt(res[1])){$(this).addClass('warning');}

                    if ($('.equipeGauche',this).html() === equipeCourante){
                        $('.equipeGauche',this).css("font-weight","bold");
                        if (parseInt(res[0]) > parseInt(res[1])){$(this).addClass('success');}
                        if (parseInt(res[0]) < parseInt(res[1])){$(this).addClass('danger');}
                    } else if ($('.equipeDroite',this).html() === equipeCourante){
                        $('.equipeDroite',this).css("font-weight","bold");
                        if (parseInt(res[0]) > parseInt(res[1])){$(this).addClass('danger');}
                        if (parseInt(res[0]) < parseInt(res[1])){$(this).addClass('success');}
                    }
                }

            });

        }
    </script>
    <script>

        var ctx = document.getElementById("classementParJournee").getContext('2d');
        var array = {{ classement_par_journee|json_encode|raw }};
        var datasetValue = [];
        var j = 0;
        var borderColor;
        $.each(array, function (index, value) {
            datasetValue[j] = {
                spanGaps: true,
                label: index,
                data: value,
                borderWidth: 2,
                backgroundColor: [],
                lineTension: 0.1,
                fill: false,
                borderColor: colorByTeam(index)
            }
            j++;
        });
        function colorByTeam(team) {
            if (team.indexOf('CORM') != -1){
                console.log(team);
                return "rgb(58, 83, 155)";
            }
            else return '#'+(0x1000000+(Math.random())*0xffffff).toString(16).substr(1,6);
        }
        var myChart = new Chart(ctx, {
            responsive: true,
            type: 'line',
            data: {
                labels: {{ nb_journees|json_encode|raw }},
                datasets: datasetValue
            },
            options: {
                legend: {
                    display: true
                },
                scales: {
                    yAxes: [{
                        scaleLabel: {
                            display: true,
                            labelString: 'Classement',
                        },
                        ticks: {
                            beginAtZero:true,
                            min: 1,
                            reverse: true,
                        }
                    }],
                    xAxes: [{
                        scaleLabel: {
                            display: true,
                            labelString: 'Journée'
                        }
                    }]
                }
            }
        });

</script>
{% endblock %}