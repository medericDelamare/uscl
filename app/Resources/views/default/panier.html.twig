{% extends 'base.html.twig' %}
{% block body %}
    <header class="business-header"
            style="background: url({{ asset('pictures/bueau.jpg') }}) center center no-repeat scroll;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="tagline"></h1>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="d-flex bd-highlight mb-3">
            <div class="mr-auto p-2 bd-highlight">
                <h1>Votre panier</h1>
            </div>
            <div class="p-2 bd-highlight">
                {% if items|length > 0 %}
                    <a href="{{ path('panier_reset') }}" class="btn btn-danger">
                        Vider le panier
                    </a>
                {% endif %}
            </div>
        </div>

        {% if items|length > 0 %}
            <table class="table">
                <thead>
                <tr>
                    <th>Produit</th>
                    <th>Taille</th>
                    <th>Initiales</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                <tr>
                    <td>{{ item.produit.nom }}</td>
                    <td>{{ item.taille }}</td>
                    <td>{% if item.initiales == 0 %}Non{% else %}Oui{% endif %}</td>
                    <td>{{ item.produit.prixCatalogue }} €</td>
                    <td>{{ item.quantite }}</td>
                    <td>{{ item.produit.prixCatalogue * item.quantite }} €</td>
                    <td>
                        <a href="{{ path('panier_remove', {'id': item.produit.id, 'taille': item.taille,'initiales': item.initiales}) }}"
                           class="btn-danger btn-sm">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="5" class="text-right">Total :</td>
                    <td>{{ total }} €</td>
                    <td></td>
                </tr>
                </tfoot>

            </table>
        {% else %}
            <div class="alert alert-primary" role="alert">
                Votre panier est vide !
            </div>
        {% endif %}
    </div>
{% endblock %}